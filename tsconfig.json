{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "lib": [
      "es6",
      "dom",
      "esnext",
      "es2020",
      "es5"
    ],
    "baseUrl": "./src",
    "typeRoots": ["./src/typings", "./node_modules/@types"],
  },
  "exclude": [
    "node_modules"
  ]
}